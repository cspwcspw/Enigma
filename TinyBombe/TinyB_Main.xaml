<Window x:Class="TinyBombe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TinyBombe"
        mc:Ignorable="d"
        Title="Pete's 8-Letter Bombe Visualizer" Height="800" Width="1200">
    <Grid x:Name="mainGrid">
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="48,10,0,0" VerticalAlignment="Top" Click="button_Click"/>
        <TextBox x:Name="tbWindow" HorizontalAlignment="Left" Height="20" Margin="168,10,0,0" TextWrapping="Wrap" Text="AAA" VerticalAlignment="Top" Width="51"/>
        <Button x:Name="btnApply" Content="Apply" HorizontalAlignment="Left" Margin="234,10,0,0" VerticalAlignment="Top" Click="btnApply_Click"/>

    </Grid>
</Window>
