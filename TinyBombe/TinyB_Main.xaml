<Window x:Class="TinyBombe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TinyBombe"
        mc:Ignorable="d"
        Title="Pete's 8-Letter Bombe Visualizer" Height="800" Width="1200">
    <Grid x:Name="mainGrid">
        <Menu x:Name="mainMenu" Height="22" Width="222" HorizontalAlignment="Left" VerticalAlignment="Top">
            <MenuItem Header="Samples"/>
        </Menu>

        <TextBox x:Name="tbWindow" HorizontalAlignment="Left" Height="20" Margin="274,3,0,0" TextWrapping="Wrap" Text="AAA" VerticalAlignment="Top" Width="36"/>
        <Button x:Name="btnApply" Content="Apply" HorizontalAlignment="Left" Margin="348,3,0,0" VerticalAlignment="Top" Click="btnApply_Click" Width="48"/>
        <Button x:Name="btnBack" Content="-" HorizontalAlignment="Left" Margin="244,3,0,0" VerticalAlignment="Top"   Width="20" Height="21" Click="btnBack_Click"/>
        <Button x:Name="btnFwd" Content="+" HorizontalAlignment="Left" Margin="318,3,0,0" VerticalAlignment="Top"  Width="20" Height="21" Click="btnFwd_Click"/>


        <TextBox x:Name="Crib" HorizontalAlignment="Left" Height="19" Text ="BEACH"   Margin="551,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" FontFamily="Consolas" FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="Cipher" HorizontalAlignment="Left" Height="20"  Text="GBEECBGFH" VerticalAlignment="Top" Width="315" Margin="551,0,0,0"   FontFamily="Consolas" FontWeight="Bold" FontSize="14"/>
        <Label  Content="Crib:" HorizontalAlignment="Left" Margin="518,22,0,0" Padding="0"    VerticalAlignment="Top" Height="18"/>
        <Label  Content="Intercepted:" HorizontalAlignment="Left" Margin="481,1,0,0" Padding="0"    VerticalAlignment="Top" Height="18"/>
        <Label  Content="Recovered Message at these wheel settings:" HorizontalAlignment="Left" Margin="883,2,0,0" Padding="0"    VerticalAlignment="Top" Height="18"/>
        <Label  x:Name="Recovered" Content="Hello, World!" HorizontalAlignment="Left" Margin="883,22,0,0" Padding="0"    VerticalAlignment="Top" Height="18" FontFamily="Consolas" FontWeight="Bold" FontSize="14"/>
        <CheckBox x:Name="cbReplaceSpaces" Content="Replace 'G's by spaces" HorizontalAlignment="Left" Margin="729,23,0,0" VerticalAlignment="Top" IsChecked="True" Click="cbReplaceSpaces_Click"/>
        <CheckBox x:Name="cbUseDiagonalBoard" Content="Use Welchman's Diagonal Board" HorizontalAlignment="Left" Margin="244,28,0,0" VerticalAlignment="Top" IsChecked="True" Click="cbUseDiagonalBoard_Click"/>




    </Grid>
</Window>
